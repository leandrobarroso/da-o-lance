<div class="container col-6 auctions">
  <h1>New Shop List</h1>
  <%= simple_form_for @auction, input_html: {id: "new_auction"} do |f| %>
    <%= f.error_notification %>
    <%= f.input :list_name, label: 'New List Name' %>
    <div class="d-flex justify-content-between align-items-end datetimepicker">
      <%= f.input :deadline, label: 'Bidding deadline:', as: :string, input_html: {id: "deadline_input"} %>
      <%= f.input :delivery_time, label: 'Delivery on:', as: :string, input_html: {id: "delivery_time_input"} %>
    </div>


    <h3>Items</h3>

    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Item</th>
          <th>Quant</th>
        </tr>
      </thead>
      <tbody class="products">
        <%= f.simple_fields_for :auction_products do |auction_product| %>
          <%= render 'auction_product_fields', :f => auction_product  %>
        <% end %>
      </tbody>
    </table>
    <div class="form-actions d-flex justify-content-around">
      <%= link_to_add_association 'Add Item', f, :auction_products, class: 'btn btn-secondary',
      data: { association_insertion_node: '.products', association_insertion_method: :append } %>
      <%= f.button :submit,  "Post List", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<%= render 'shared/control_footer' %>
