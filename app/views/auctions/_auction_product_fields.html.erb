<tr class='nested-fields'>
  <td class="align-items-center">
    <%= link_to_remove_association '<i class="fas fa-times-circle"></i>'.html_safe, f, class: 'h1' %>
  </td>
  <td><%= f.input :product_id, label: false, collection: @products.map { |product| [product.description, product.id, {data: {description: product.description}}] } %></td>
  <td><%= f.input :quantity, label: false, collection: (1..100) %></td>
</tr>
