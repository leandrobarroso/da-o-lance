<tr class='nested-fields'>
  <td class="">
    <%= link_to_remove_association '<i class="fas fa-times-circle"></i>'.html_safe, f, class: 'h1 text-danger' %>
  </td>
  <td class="w-50"><%= f.input :product_id, label: false, collection: @products.map { |product| [product.description, product.id, {data: {description: product.description}}]}, input_html: {class: "select2"} %></td>
  <td class="w-25"><%= f.input :quantity, label: false, input_html: {class: "field-hight"}, collection: (1..99999), as: :integer, class: 'w-100' %></td>
</tr>
