<div class="container">
  <div class="p-2 d-flex justify-content-between align-items-center">
    <h2>Minhas listas</h2>
    <div class="d-flex flex-column align-items-center">
      <%= link_to '<i class="fas fa-plus-circle"></i>'.html_safe, new_auction_path, class: 'display-4' %>
      <span>CRIAR LISTA</span>
    </div>
  </div>
  <div class="m-3 p-2">
    <div class="my-3">
      <h3>Abertas</h3>
      <% @auctions.select { |auct| auct.deadline > Time.now }.each do |auction| %>
        <ul class="list-group">
          <li class="list-group-item">
            <div class="row align-items-center">
              <div class="col">
                <h5><%= link_to "#{auction.list_name}", auction_path(auction)%></h5>
              </div>
              <div class="col">
                <span>Lances: <%= auction.bids.count %></span>
              </div>
              <div class="col-12 col-sm-4">
                <span>Tempo restante: <%= "#{distance_of_time_in_words(Time.now, auction.deadline.to_time)}" %></span>
              </div>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
    <div class="my-3">
      <h3>Finalizadas</h3>
      <% @auctions.select { |auct| auct.deadline < Time.now }.each do |auction| %>
        <ul class="list-group">
          <li class="list-group-item">
            <div class="row align-items-center">
              <div class="col">
                <h5><%= link_to "#{auction.list_name}", auction_path(auction)%></h5>
              </div>
              <div class="col">
                <span>Lances: <%= auction.bids.count %></span>
              </div>
              <div class="col-12 col-sm-4">
                <span>Finalizado em: <%= "#{distance_of_time_in_words(Time.now, auction.deadline.to_time)}" %></span>
              </div>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/control_footer' %>
