<div class="container">
  <h3>Here is the details of this auction</h3>

  <h6>Deadline: <%= @auction.deadline %> </h6>

  <table class="table">
    <thead>
    <tr>
      <th scope="col">Quantity</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <% @auction.auction_products.each do |auction_product| %>
      <tr>
        <td><%= auction_product.quantity %></td>
        <td><%= image_tag (""), height: 50, width: 50, crop: :fill, class: "" %></td>
        <td><%= auction_product.product.description %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
   <table class="table">
    <thead>
    <tr>
      <th scope="col">Seller</th>
      <th scope="col">Link</th>
      <th scope="col">Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @auction.bids.each do |auction_bid| %>
      <tr>
        <td><%= auction_bid.seller.name %></td>
        <td><%= link_to "Details", bids_path(auction_bid) %></td>
        <td><%= auction_bid.total %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <%= link_to "Voltar", auctions_path, class: "btn btn-gradient" %>
  <%= link_to "Editar", auctions_path, class: "btn btn-danger" %>
</div>

