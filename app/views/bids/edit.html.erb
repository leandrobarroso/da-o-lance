<div class="container">
<h1>Bids#edit</h1>
<%= simple_form_for [@bid] do |f| %>

  <div class="row border my-1">
      <div class="col-7 text-center">
        Produto
      </div>
      <div class="col-1 text-center">
        Quantidade
      </div>
      <div class="col-2 text-center">
        Pre√ßo Unit.
      </div>
      <div class="col-2 text-center">
        Total
      </div>
    </div>
  <%= f.simple_fields_for :bid_products do |ff|%>

  <div class="row bg-white border">
    <% product = Product.find(@bid.bid_products[ff.index].product_id) %>
    <div class="col-7 d-flex justify-content-start">
      <%= image_tag (Faker::LoremPixel.image(size: "75x75", is_gray: false, category: 'technics', number: 3)), height: 75, width: 75, crop: :fill, class: "" %>
      <span><%= product.description  %></span>
    </div>
    <div class="col-1 text-center">
      <span><%= @bid.bid_products[ff.index].quantity %></span>
    </div>
    <div class="col-2">
    <%= ff.input :unit_price, label: false, placeholder: '0.00', as: :string %>
    </div>
    <div class="col-2">
    <%= "total prices" %>
    </div>
  </div>
  <% end %>


  <%= f.input :total, disabled: true, id: 'bid-total', placeholder: '0.00', as: :string %>

  <%= f.submit %>
<% end %>
</div>
<%= render 'shared/control_footer' %>
