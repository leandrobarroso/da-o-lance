<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-md-6 col-lg-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Cadastrar como vendedor</h2>
        <%= simple_form_for @seller do |f|%>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
        <%= link_to "Voltar", :back, class: "btn btn-gradient" %>
      </div>
    </div>
  </div>
</div>
