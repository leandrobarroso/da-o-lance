<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-md-6 col-lg-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Register as a Seller</h2>
        <%= simple_form_for @seller do |f|%>
          <%= f.input :name, label: "Store name" %>
          <%= f.input :address %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
        <%= link_to "back", user_root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
