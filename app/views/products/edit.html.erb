<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-md-6 col-lg-4 col-sm-offset-4">
      <div class="form-login">
        <h2><%= I18n.translate('product_edit.register') %></h2>
        <%= simple_form_for @product do |f|%>
          <%= f.input :description, label: I18n.translate('product_edit.description') %>
          <%= f.input :category, label: I18n.translate('product_edit.category') %>
          <%= f.input :photo, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: I18n.translate('product_edit.photo') %>
          <%= f.button :submit, value: I18n.translate('product_edit.create'), class: 'btn btn-primary' %>
        <% end %>
        <%= link_to I18n.translate('product_edit.back'), user_root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
