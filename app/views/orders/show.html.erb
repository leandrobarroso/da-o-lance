<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%#= image_tag(@teddy.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @order.bid.auction.list_name %></h1>
      <p>Some awesome description of our amazing teddy.</p>
      <p>$$$</p>
    </div>
  </div>
</div>
<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%#= image_tag @order.teddy.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.status %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>BID</strong> <%= @order.bid.auction.list_name %> [<%= @order.bid_id %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount_cents %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
