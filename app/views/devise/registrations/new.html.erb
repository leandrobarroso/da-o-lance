<div class="container">
  <div class="row justify-content-center">
    <div class="m-5 col-xs-12 col-sm-10 col-md-6 col-lg-4 col-sm-offset-4">
      <div class="form-login">
        <h2><%= I18n.translate('registrations.r_sign') %></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        label: I18n.translate('registrations.r_pass'),
                        required: true,
                        hint: ("#{@minimum_password_length} #{I18n.translate('registrations.r_charac')}" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: I18n.translate('registrations.r_conf_pass'),
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :first_name,
                        label: I18n.translate('registrations.r_fn'),
                        required: true,
                        input_html: { autocomplete: "first name" }%>
            <%= f.input :last_name,
                        label: I18n.translate('registrations.r_ln'),
                        required: true,
                        input_html: { autocomplete: "last name" }%>
            <%= f.input :address,
                        label: I18n.translate('registrations.r_address'),
                        required: true,
                        input_html: { autocomplete: "address" }%>
            <%= f.input :photo, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: I18n.translate('registrations.r_photo') %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, I18n.translate('registrations.r_sub_sign'), class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
