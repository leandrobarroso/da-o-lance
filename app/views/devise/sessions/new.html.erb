<div class="container">
  <div class="row justify-content-center">
    <div class="m-5 col-xs-12 col-sm-10 col-md-6 col-lg-4 col-sm-offset-4">
      <div class="form-login">
        <h2><%= I18n.translate('sessions.s_log_in') %></h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        label: I18n.translate('sessions.s_email'),
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: I18n.translate('sessions.s_pass'),
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: I18n.translate('sessions.s_remember'), as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, label: I18n.translate('sessions.s_log_btn'), class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
